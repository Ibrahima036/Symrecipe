{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Formulaire de Connexion</h1>
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form action="{{path('security.login')}}">
			<div class="form-group">
				<label for="username" class="form-label mt-4">Adresse email</label>
				<input type="text" class="form-control" id="username" name="_username" placeholder=" exemple@gmail.com" value="{{last_username}}">
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de pass</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="*******" value="{{last_username}}">
			</div>
			<button type="submit" class="btn btn-primary mt-4">Se Connecter</button>
		</form>
	</div>
{% endblock %}
