{% extends "base.html.twig" %}
{% block title %}Page - Edition d'un ingrédient
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="mt-4">Modification d'un Ingrédient</h1>
		{{form_start(form)}}
		<div class="form-group">
			{{form_label(form.name)}}
			{{form_widget(form.name)}}
			<div class="form-error">
				{{form_errors(form.name)}}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.price)}}
			{{form_widget(form.price)}}
			<div class="form-error">
				{{form_errors(form.price)}}
			</div>
		</div>
		<div class="form-group mt-4">
			<button class="btn btn-primary">Modifier l'ingrédient</button>
		</div>
        {{form_end(form)}}
	</div>
{% endblock %}
